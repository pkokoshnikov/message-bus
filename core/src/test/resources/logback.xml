<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %mdc - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.pak.messagebus" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="stdout" />
    </root>
</configuration>
